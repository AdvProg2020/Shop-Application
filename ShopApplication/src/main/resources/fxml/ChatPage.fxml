<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="400.0" minWidth="600.0" stylesheets="@../css/ChatPage.css"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="Client.view.Controllers$ChatPageController">
    <center>
        <ScrollPane id="bg-pane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
            <content>
                <VBox fx:id="messages" alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: rgba(8, 93, 228, 0.6);" BorderPane.alignment="CENTER">
            <children>
                <Button id="refresh-button" fx:id="refreshBTN" layoutX="556.0" layoutY="20.0" mnemonicParsing="false">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Button>
                <HBox alignment="CENTER" styleClass="field-box" HBox.hgrow="ALWAYS">
                    <children>
                        <TextField fx:id="messageField" promptText="type your message here..." HBox.hgrow="ALWAYS"/>
                        <Button id="send-button" fx:id="sendBTN" mnemonicParsing="false"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
