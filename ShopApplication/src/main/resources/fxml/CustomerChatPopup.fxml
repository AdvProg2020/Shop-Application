<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.view.Controllers$CustomerChatPopupController">
    <center>
        <AnchorPane fx:id="chatPane" minHeight="400.0" minWidth="600.0">

        </AnchorPane>
    </center>
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label id="supporter-label" text="Supporter:" />
                <ChoiceBox fx:id="supporterBox" prefWidth="150.0" stylesheets="@../css/ChoiceBox.css" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="createChatBTN" mnemonicParsing="false" text="Create Chat" />
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </HBox>
    </top>
</BorderPane>
